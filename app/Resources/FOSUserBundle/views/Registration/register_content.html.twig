{% trans_default_domain 'FOSUserBundle' %}


{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    {{ form_errors(form) }}
<div class="form-group">
    {{ form_widget(form.email, {
        attr: {class: 'input-material'}
    }) }}
    {{ form_label(form.email, null, {
        label_attr: {class: 'label-material'}
    }) }}
    {{ form_errors(form.email) }}
</div>
<div class="form-group">
    {{ form_widget(form.username, {
        attr: {class: 'input-material'}
    }) }}
    {{ form_label(form.username, null, {
        label_attr: {class: 'label-material'}
    }) }}
    {{ form_errors(form.username) }}
</div>
<div class="form-group">
    {{ form_widget(form.plainPassword.first, {
        attr: {class: 'input-material'}
    }) }}
    {{ form_label(form.plainPassword.first, null, {
        label_attr: {class: 'label-material'}
    }) }}
    {{ form_errors(form.plainPassword.first) }}
</div>
<div class="form-group">
    {{ form_widget(form.plainPassword.second, {
        attr: {class: 'input-material'}
    }) }}
    {{ form_label(form.plainPassword.second, null, {
        label_attr: {class: 'label-material'}
    }) }}
    {{ form_errors(form.plainPassword.second) }}
</div>
<div class="form-group">
    <input class="btn btn-primary" type="submit" value="{{ 'registration.submit'|trans }}" />
</div>
<small>Already have an account? </small><a href="{{ path('fos_user_security_login') }}" class="signup">Login</a>
{{ form_end(form) }}
