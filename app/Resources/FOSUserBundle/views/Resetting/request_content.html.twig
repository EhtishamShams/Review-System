{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div class="form-group">
        <input type="text" id="username" name="username" required="required" class="input-material" />
        <label for="username" class="label-material">{{ 'resetting.request.username'|trans }}</label>
    </div>
    <div class="form-group">
        <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="btn btn-primary"/>
    </div>
</form>
<a href="{{ path('fos_user_security_login') }}" class="signup"> < Go Back</a>
