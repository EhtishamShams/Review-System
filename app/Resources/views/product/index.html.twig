{% extends 'product/prodLayout.html.twig' %}

{% block pageheader %}
    <!-- Page Header-->
    <header class="page-header">
        <div class="container-fluid">
            <h2 class="no-margin-bottom">Products</h2>
        </div>
    </header>
    <!-- Breadcrumb-->
    <div class="breadcrumb-holder container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
            <li class="breadcrumb-item active">Products</li>
        </ul>
    </div>

{% endblock %}

{% block body %}
    <section class="tables">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <a href="{{ path('product_new') }}" class="btn btn-primary" style="float: right">Add Product</a>
                </div>
            </div><br>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-close">
                            <div class="dropdown">
                                <button type="button" id="closeCard3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-ellipsis-v"></i></button>
                                <div aria-labelledby="closeCard3" class="dropdown-menu dropdown-menu-right has-shadow"><a href="#" class="dropdown-item remove"> <i class="fa fa-times"></i>Close</a><a href="#" class="dropdown-item edit"> <i class="fa fa-gear"></i>Edit</a></div>
                            </div>
                        </div>
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">All Products</h3>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Picture</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Description</th>
                                        <th></th><th></th><th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% set i = 1 %}
                                    {% for prod in products %}
                                    <tr>
                                        <td>{{ i }}</td>
                                        <td>
                                            {% if prod.picPath is not null %}
                                                <img src="{{ asset('uploads/images/' ~ prod.picPath) }}" alt="Product" class="img-fluid" style="max-height: 60px; width: auto;">
                                            {% else %}
                                                <img src="{{ asset('img/no-img.jpg') }}" alt="Product" class="img-fluid" style="max-height: 60px; width: auto;">
                                            {% endif %}
                                        </td>
                                        <td>{{ prod.name }}</td>
                                        <td>{{ prod.price }}</td>
                                        <td>{{ prod.description }}</td>
                                        <td><a href="{{ path('product_show', {'id': prod.id}) }}" class="btn btn-default">Show</a></td>
                                        <td><a href="{{ path('product_edit', {'id': prod.id}) }}" class="btn btn-primary">Edit</a></td>
                                        <td>
                                            <form action="{{ path('product_delete', {'id': prod.id}) }}" method="post">
                                                <input type="submit" class="btn btn-danger" value="Delete">
                                            </form>
                                        </td>
                                    </tr>
                                        {% set i = i + 1 %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}