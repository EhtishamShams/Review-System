{% extends 'review/anonyLayout.html.twig' %}

{% block body %}
    <section>
        <div class="container-fluid">
            <div class="row">
                <!-- Basic Form-->
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Customer Feedback</h3>
                        </div>
                        <div class="card-body">
                            <p>Please give your valueable feedback!</p>

                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label"></label>
                                <div class="col-sm-9">
                                    {% if product.picPath is not null %}
                                        <img src="{{ asset('uploads/images/' ~ product.picPath) }}" alt="Product" class="img-fluid" style="max-height: 250px; width: auto;">
                                    {% else %}
                                        <img src="{{ asset('img/no-img.jpg') }}" alt="Product" class="img-fluid" style="max-height: 250px; width: auto;">
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Product Name</label>
                                <div class="col-sm-9">
                                    {{ product.name }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Product Price</label>
                                <div class="col-sm-9">
                                    {{ product.price }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Product Description</label>
                                <div class="col-sm-9">
                                    {{ product.description }}
                                </div>
                            </div>


                            {{ form_start(reviewForm, {'attr': {'class': 'form-horizontal'}}) }}

                            {{ form_errors(reviewForm) }}

                            <div class="form-group row">
                                {{ form_label(reviewForm.customerName, null, {
                                    label_attr: {class: 'col-sm-3 form-control-label'}
                                }) }}
                                <div class="col-sm-9">
                                    {{ form_widget(reviewForm.customerName, {
                                        attr: {class: 'form-control', placeholder:'Your Full Name'}
                                    }) }}
                                </div>
                                {{ form_errors(reviewForm.customerName) }}
                            </div>

                            <div class="form-group row">
                                {{ form_label(reviewForm.rating, "Rating (1-5)", {
                                    label_attr: {class: 'col-sm-3 form-control-label'}
                                }) }}
                                <div class="col-sm-9">
                                    {{ form_widget(reviewForm.rating, {
                                        attr: {class: 'form-control', placeholder:'Rating'}
                                    }) }}
                                </div>
                                {{ form_errors(reviewForm.rating) }}
                            </div>

                            <div class="form-group row">
                                {{ form_label(reviewForm.comment, null, {
                                    label_attr: {class: 'col-sm-3 form-control-label'}
                                }) }}
                                <div class="col-sm-9">
                                    {{ form_widget(reviewForm.comment, {
                                        attr: {class: 'form-control', placeholder:'Some decent comments!'}
                                    }) }}
                                </div>
                                {{ form_errors(reviewForm.comment) }}
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-9 offset-sm-3">
                                    <button type="submit" class="btn btn-primary" formnovalidate>Submit</button>
                                </div>
                            </div>

                            {{ form_end(reviewForm) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    {#</section>#}
{% endblock %}